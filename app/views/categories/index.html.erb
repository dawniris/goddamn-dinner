<h1>Here's Your Fucking Tags</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr id="category-information-<%= category.id %>">
        <td style="width:50%"><%= link_to category.name, category_path(:id => category.id), class: "a" %></td>
        <td style="width:35px"><%= link_to 'Edit', edit_category_path(category), class: "a" %></td>
        <td style="width:35px"><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Delete category?' }, class: "a" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

